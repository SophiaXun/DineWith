<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_wish_list"
    tools:context="com.example.yazhou.dinewith.AddWishList">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add wishlist"
        android:id="@+id/addWishListTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="userId"
        android:id="@+id/userIdTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/addWishListTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="date"
        android:id="@+id/dateTextView"
        android:layout_below="@+id/userIdTextView"
        android:layout_alignLeft="@+id/restaurantTextView"
        android:layout_alignStart="@+id/restaurantTextView"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="restaurantId"
        android:id="@+id/restaurantTextView"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/dateTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="completeFlag"
        android:id="@+id/completeFlagTextView"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/restaurantTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userIdEditText"
        android:layout_alignBottom="@+id/userIdTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="userId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateEditText"
        android:layout_alignBottom="@+id/dateTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurantIdEditText"
        android:layout_alignBottom="@+id/restaurantTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="restaurantId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completeFlagEditText"
        android:layout_alignBottom="@+id/completeFlagTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="completeFlag" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to WishList"
        android:id="@+id/submitButton"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/completeFlagTextView"
        android:layout_toRightOf="@+id/completeFlagTextView"
        android:layout_toEndOf="@+id/completeFlagTextView" />

</RelativeLayout>
